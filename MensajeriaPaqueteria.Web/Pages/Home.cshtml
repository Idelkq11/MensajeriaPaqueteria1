@page
@model HomeModel
@{
}
<style>
    html, body {
        height: 100%;
        margin: 0;
        display: flex;
        flex-direction: column;
    }

    .container {
        flex: 1;
        
    }
</style>

<div class="text-center mt-4">
    <h1 class="header-title fw-bold text-primary">¡Bienvenido a CargoSwift!</h1>
    <p class="lead text-secondary">Rápido, seguro y siempre a tiempo.</p>
</div>

<div class="container mt-3">
    <div class="row text-center g-3">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fa-solid fa-users text-success" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Clientes</h5>
                    <p class="card-text">Administra la información de tus clientes.</p>
                    <a asp-page="/Clientes/Index" class="btn btn-outline-success">Ir a Clientes</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fa-solid fa-truck text-warning" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Envíos</h5>
                    <p class="card-text">Consulta el estado y la ruta de los envíos.</p>
                    <a asp-page="/Envios/Index" class="btn btn-outline-warning">Ir a Envíos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fa-solid fa-motorcycle text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Mensajeros</h5>
                    <p class="card-text">Gestiona a los mensajeros y su disponibilidad.</p>
                    <a asp-page="/Mensajeros/Index" class="btn btn-outline-primary">Ir a Mensajeros</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fa-solid fa-box text-danger" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Paquetes</h5>
                    <p class="card-text">Rastrea y administra paquetes en tránsito.</p>
                    <a asp-page="/Paquetes/Index" class="btn btn-outline-danger">Ir a Paquetes</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-2">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="fa-solid fa-map text-info" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Rutas</h5>
                    <p class="card-text">Consulta y optimiza las rutas de entrega.</p>
                    <a asp-page="/Rutas/Index" class="btn btn-outline-info">Ir a Rutas</a>
                </div>
            </div>
        </div>
    </div>
</div>


<footer class="text-center mt-0">
    <p>© 2025 - CargoSwift - <a href="/Privacy">Privacy</a></p>
</footer>
