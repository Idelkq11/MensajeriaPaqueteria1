@page
@model MensajeriaPaqueteria.Web.Pages.Paquetes.CreateModel
@{
    ViewData["Title"] = "Crear Paquete";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Paquete.TipoPaquete"></label>
        <input asp-for="Paquete.TipoPaquete" class="form-control" />
        <span asp-validation-for="Paquete.TipoPaquete" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paquete.Peso"></label>
        <input asp-for="Paquete.Peso" class="form-control" />
        <span asp-validation-for="Paquete.Peso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paquete.EstadoPaquete"></label>
        <input asp-for="Paquete.EstadoPaquete" class="form-control" />
        <span asp-validation-for="Paquete.EstadoPaquete" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paquete.FechaEnvio"></label>
        <input asp-for="Paquete.FechaEnvio" type="datetime-local" class="form-control" />
        <span asp-validation-for="Paquete.FechaEnvio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paquete.ClienteId"></label>
        <input asp-for="Paquete.ClienteId" class="form-control" />
        <span asp-validation-for="Paquete.ClienteId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
