@page "{id:int}"
@model MensajeriaPaqueteria.Web.Pages.Paquetes.EditModel
@{
    ViewData["Title"] = "Editar Paquete";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <!-- ID del paquete oculto -->

    <input type="hidden" asp-for="Paquete.PaqueteId" />

    <!-- ClienteId oculto para evitar el error de clave foránea -->
    <input type="hidden" asp-for="Paquete.ClienteId" />

    <div class="form-group">
        <label asp-for="Paquete.TipoPaquete" class="form-label">Tipo de Paquete</label>
        <input asp-for="Paquete.TipoPaquete" class="form-control" id="TipoPaquete" required />
        <span asp-validation-for="Paquete.TipoPaquete" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Paquete.Peso" class="form-label">Peso</label>
        <input asp-for="Paquete.Peso" type="number" class="form-control" id="Peso" required />
        <span asp-validation-for="Paquete.Peso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Paquete.EstadoPaquete" class="form-label">Estado del Paquete</label>
        <input asp-for="Paquete.EstadoPaquete" class="form-control" id="EstadoPaquete" required />
        <span asp-validation-for="Paquete.EstadoPaquete" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Paquete.FechaEnvio" class="form-label">Fecha de Envío</label>
        <input asp-for="Paquete.FechaEnvio" type="datetime-local" class="form-control" id="FechaEnvio" required />
        <span asp-validation-for="Paquete.FechaEnvio" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
