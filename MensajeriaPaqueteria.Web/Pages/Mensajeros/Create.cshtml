@page
@model MensajeriaPaqueteria.Web.Pages.Mensajeros.CreateModel
@{
    ViewData["Title"] = "Crear Mensajero";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="OnPostAsync">
    <div class="form-group">
        <label asp-for="Mensajero.Nombre" class="control-label"></label>
        <input asp-for="Mensajero.Nombre" class="form-control" />
        <span asp-validation-for="Mensajero.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mensajero.Telefono" class="control-label"></label>
        <input asp-for="Mensajero.Telefono" class="form-control" />
        <span asp-validation-for="Mensajero.Telefono" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mensajero.Vehiculo" class="control-label"></label>
        <input asp-for="Mensajero.Vehiculo" class="form-control" />
        <span asp-validation-for="Mensajero.Vehiculo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mensajero.Estado" class="control-label"></label>
        <input asp-for="Mensajero.Estado" class="form-control" />
        <span asp-validation-for="Mensajero.Estado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
