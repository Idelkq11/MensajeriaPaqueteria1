@page
@model MensajeriaPaqueteria.Web.Pages.Envios.CreateModel
@{
    ViewData["Title"] = "Nuevo Envío";
}

<h2>Nuevo Envío</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Envio.FechaEnvio" class="form-label"></label>
        <input asp-for="Envio.FechaEnvio" class="form-control" type="date" />
        <span asp-validation-for="Envio.FechaEnvio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Envio.Direccion" class="form-label"></label>
        <input asp-for="Envio.Direccion" class="form-control" />
        <span asp-validation-for="Envio.Direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Envio.PaqueteId" class="form-label"></label>
        <input asp-for="Envio.PaqueteId" class="form-control" />
        <span asp-validation-for="Envio.PaqueteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Envio.Estado" class="form-label"></label>
        <select asp-for="Envio.Estado" class="form-select">
            <option>Pendiente</option>
            <option>En camino</option>
            <option>Entregado</option>
        </select>
        <span asp-validation-for="Envio.Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
    <a asp-page="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Cancelar</a>
</form>
