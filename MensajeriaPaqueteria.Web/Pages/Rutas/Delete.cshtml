@page "{id:int}"
@model MensajeriaPaqueteria.Web.Pages.Rutas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Ruta";
}

<h1>@ViewData["Title"]</h1>

<h4>¿Estás seguro que deseas eliminar esta ruta?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Origen</dt>
        <dd class="col-sm-10">@Model.Ruta.Origen</dd>

        <dt class="col-sm-2">Destino</dt>
        <dd class="col-sm-10">@Model.Ruta.Destino</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Ruta.EstadoRuta</dd>

        <dt class="col-sm-2">Mensajero</dt>
        <dd class="col-sm-10">@Model.Ruta.MensajeroNombre</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
