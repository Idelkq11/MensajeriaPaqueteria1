@page "/Clientes/Index"
@model MensajeriaPaqueteria.Web.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Agregar Cliente</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model.Clientes)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Direccion</td>
                <td>@cliente.Telefono</td>
                <td>
                    <a asp-page="Details" asp-route-id="@cliente.ClienteId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-page="Edit" asp-route-id="@cliente.ClienteId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="Delete" asp-route-id="@cliente.ClienteId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

