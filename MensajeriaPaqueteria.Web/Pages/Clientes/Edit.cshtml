@page "{id:int}"
@model MensajeriaPaqueteria.Web.Pages.Clientes.EditModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <!-- Campo oculto para asegurar que ClienteId se envíe en el POST -->
    <input type="hidden" asp-for="Cliente.ClienteId" />

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" asp-for="Cliente.Nombre" />
        <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Direccion">Dirección</label>
        <input type="text" class="form-control" id="Direccion" asp-for="Cliente.Direccion" />
        <span asp-validation-for="Cliente.Direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Telefono">Teléfono</label>
        <input type="text" class="form-control" id="Telefono" asp-for="Cliente.Telefono" />
        <span asp-validation-for="Cliente.Telefono" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.unobtrusive.min.js"></script>
}