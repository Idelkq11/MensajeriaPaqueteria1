@page "{id:int}"
@model MensajeriaPaqueteria.Web.Pages.Clientes.DeleteModel

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>@ViewData["Title"]</h1>

<h4>¿Estás seguro que deseas eliminar este cliente?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Cliente.Nombre</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Cliente.Direccion</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Cliente.Telefono</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
