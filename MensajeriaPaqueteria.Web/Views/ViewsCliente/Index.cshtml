@model IEnumerable<MensajeriaPaqueteria.Domain.Entities.Cliente>

@{
    ViewData["Title"] = "Cliente";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Cliente" asp-action="Create" class="btn btn-success">Crear Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Direccion</td>
                <td>
                    <a href="@Url.Action("Details", new { id = cliente.Id })" class="btn btn-info">Detalles</a>
                    <a href="@Url.Action("Edit", new { id = cliente.Id })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Delete", new { id = cliente.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

